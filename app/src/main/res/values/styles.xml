<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<!--标题返回按钮-->
 <style name="Title_ImgerButton">
     <item name="android:layout_height">@dimen/back_48</item>
     <item name="android:layout_width">@dimen/back_48</item>
     <item name="android:padding">@dimen/back_12</item>
 </style>
    <!--标题发送字体-->
    <style name="Title_TextTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    toolbar的优化，去除空白
    <style name="ToolBar_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <!--点赞-->
    <style name="cricleBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/avatar_animation_right_in</item>
        <item name="android:windowExitAnimation">@anim/avatar_animation_right_out</item>
    </style>

    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="actionBarSize">@dimen/actionBarSize</item>
    </style>

    <style name="customTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/actionBarTheme</item>
        <item name="colorPrimary">#FFA500</item>
        <item name="actionBarSize">@dimen/actionBarSize</item>
        <item name="colorPrimaryDark">#CCa500</item>
    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <!--android:background="@drawable/head_background"-->
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="192dp">

        <RelativeLayout
            android:id="@+id/main_head_background"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/cyan"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView

                android:text="小花"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_head_username"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="88dp"
                android:layout_marginBottom="@dimen/division_back" />
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/main_herad_Py_Imge"
            android:layout_width="@dimen/User_Head_large_width"
            android:layout_height="@dimen/User_Head_large_hight"
            fresco:roundAsCircle="true"
            fresco:fadeDuration="300"
            fresco:failureImageScaleType="centerInside"
            fresco:failureImage="@drawable/heads"
            fresco:placeholderImage="@drawable/app_head"
            fresco:roundedCornerRadius="180dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>